value = 0
sp = ["молоко","масло","жувачка","вода"]        
for i in range(4):
    a = input(" выберете слово из списка?")
    if a == "заменить":
        x = input()
        sp[value] = x
        value += 1
    elif a == "удалить":
        sp.pop(0)
    else:
        value += 1
