sp = ["молоко","масло"]        
for i in range(len(sp)):
    a = int(input(" выберете слово из списка?"))
    if a == 1:
        b = int(input("выберете действие,удалить слово[1],замеить значение[2],оставить слово[3]"))
        if b == 1:
            sp.pop(0)
        if b == 2:
            sp[0] = input("введите новое слово")
    if a == 2:
        b = int(input("выберете действие,удалить слово[1],замеить значение[2],оставить слово[3]"))
